#:import Toolbar kivymd.toolbar.Toolbar
#:import ZBarCam kivy.garden.zbarcam.ZBarCam
#:import MDTextField kivymd.textfields.MDTextField


# need this hack to push widgets up
<PushUp@BoxLayout>:


<QRScanScreen>:
    ZBarCam:
        id: zbarcam_id


<QRFoundScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDTextField:
            text: root.data_property
            readonly: True
            multiline: True
        MDRaisedButton:
            text: 'Copy'
			on_release: root.copy_to_clipboard()
        PushUp:


<CustomToolbar>:
    title: 'QRCode & Barcode scanner'
    md_bg_color: app.theme_cls.primary_color
    background_palette: 'Primary'
    background_hue: '500'


BoxLayout:
    orientation: 'vertical'
	CustomToolbar:
		id: toolbar_id
    ScreenManager:
        id: screen_manager_id
        QRScanScreen:
            id: qrscan_screen_id
            name: 'qrscan_screen'
        QRFoundScreen:
            id: qrfound_screen_id
            name: 'qrfound_screen'
